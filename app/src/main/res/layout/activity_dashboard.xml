<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="104dp"
        android:text="LifeCycleV5"
        android:textColor="#EBEBEB"
        android:textColorLink="#EBEBEB"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/updateProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updateProfile"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_marginBottom="62dp"
        android:text="Uppdatera profil"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/gameAPIButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/menu"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginEnd="3dp"
        android:background="#1B1B1B"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        android:title="Profil"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:menu="@menu/main_menu"
        app:popupTheme="@style/ThemeOverlay.Material3.Dark"
        app:subtitleTextColor="#F1F1F1"
        app:titleCentered="true"
        app:titleTextColor="#FFFFFF" />

    <Button
        android:id="@+id/gameAPIButton"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_marginBottom="332dp"
        android:text="Game           API"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>